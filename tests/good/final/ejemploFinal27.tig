/* A program to solve the 8-queens problem */

let
    var N := 8

    type intArray = array of int

    var row := intArray [ N ] of 0
    var col := intArray [ N ] of 0

    function printboard () : int =
       ((for i := 0 to N-1
	 do (for j := 0 to N-1
	      do print (if col[i]=j then " O" else " .");
	     print ("\n"));
         print ("\n"));0)

    function try (c : int) : int =
     ((for r := 0 to N-1
     do (printboard();()));0)

in try (0); exit(0)

end
